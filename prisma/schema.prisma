generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// --- 1. USER & CREATOR (Merged Model) ---
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?   // Maps to 'avatar'
  
  // Creator-specific fields (Optional for regular users)
  handle        String?   @unique // e.g. @neville
  bio           String?
  
  // Stores SocialLink[]: [{ platform: 'instagram', url: '...' }]
  socials       Json?     

  // Relations
  trips         Trip[]    @relation("CreatedTrips") // Trips this user Created
  
  // "Saved" features (User side)
  savedTrips    Trip[]    @relation("SavedTrips")   // Many-to-Many: Trips this user saved
  
  // "Following" features (User saves Creators)
  // This creates a self-relation (User follows User)
  following     User[]    @relation("UserFollows")
  followedBy    User[]    @relation("UserFollows")

  // NextAuth Required Fields
  accounts      Account[]
  sessions      Session[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// --- 3. TRIP ---
model Trip {
  id           String   @id @default(cuid())
  
  // Metadata (Card View)
  title        String
  subtitle     String?
  coverImage   String
  locationName String
  duration     String
  totalCost    String
  startDate    DateTime // Changed from String to DateTime for better sorting
  tags         String[] // Postgres supports string arrays natively
  
  // Details (Journal View)
  description  String?
  
  // --- JSON FIELDS ---
  // Prisma stores complex nested arrays as JSON.
  // This is perfect for "itinerary", "contacts", etc. which are document-like.
  
  // Stores DaySchedule[]
  itinerary       Json? 
  
  // Stores Budget[]
  budgetBreakdown Json? 
  
  // Stores Contact[]
  contacts        Json? 
  
  // Stores EssentialData
  essentials      Json? 

  // Relations
  creatorId    String
  creator      User     @relation("CreatedTrips", fields: [creatorId], references: [id], onDelete: Cascade)
  
  savedBy      User[]   @relation("SavedTrips")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// --- NEXTAUTH MODELS (Required for Auth) ---

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}